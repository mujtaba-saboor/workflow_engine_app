<div class="col-md-9">
  <div class="profile-head">
    <br>
      <ul class="nav nav-tabs">
          <li class="nav-item">
              <a class="nav-link active"><%= t('shared.about') %></a>
          </li>
      </ul>
  </div>
</div>
<br>
<div class="container">
  <div class="col-md-8">
      <div class="row">
          <div class="col-md-6">
              <label><%= t('users.name').capitalize() %>:</label>
          </div>
          <div class="col-md-6">
              <p><%= @user.name %></p>
          </div>
      </div>
      <div class="row">
          <div class="col-md-6">
              <label><%= t('users.email').capitalize() %>:</label>
          </div>
          <div class="col-md-6">
              <p><%= @user.email %></p>
          </div>
      </div>
      <div class="row">
          <div class="col-md-6">
              <label><%= t('users.role').capitalize() %>:</label>
          </div>
          <div class="col-md-6">
              <p><%= @user.role %></p>
          </div>
      </div>
      <div class="row">
          <div class="col-md-6">
              <label><%= t('users.company').capitalize() %>:</label>
          </div>
          <div class="col-md-6">
              <p><%= @user.company.name %></p>
          </div>
      </div>
      <br>
      <div>
        <%= button_to t('shared.update_resource', resource_name: t('shared.user')), edit_user_registration_path, method: :get, class: 'btn btn-info' %>
      </div>
  </div>
</div>