<div class="d-flex flex-column">
  <div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
      <h2 class="h3"><%= t('users.all_users')%></h2>
        <div class= "d-flex justify-content-end">
          <% if can? :create, User %>
            <%= link_to t('shared.new_resource', resource_name: t('shared.user')), new_invite_path,class: 'btn my-primary-btn' %>
          <% end %>
          <% if can? :make_owner_page, User %>
            <%= link_to t('users.make_owner'), make_owner_page_users_path, class: 'btn my-primary-btn mx-2' %>
          <% end %>
        </div>
    </div>
  <div class="search-box">
    <%= form_tag(filters_users_path, method: :get,remote: true) do %>
      <%= select_tag :search, options_for_select([t('shared.all')]+User::ROLES) %>
      <%= submit_tag(t('shared.filter'), class: 'btn btn-sm my-primary-btn') %>
    <% end %>
  </div>
    <br>
    <div id="user_index_table">
      <%= render 'index_table', users: @users %>
    </div>
  </div>
</div>
