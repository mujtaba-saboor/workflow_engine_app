<div class="modal-header">
  <h5 class="modal-title"><%= t('projects.add_team') %></h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
  <% project_teams  = @project.available_teams %>
  <% if project_teams.present? %>
    <%= form_with model: @project, url: add_team_to_project_project_path do |f| %>
	<div class="form-row">
	  <div class="form-group col-md-4">   
	    <%= f.label t('projects.available_teams') %>
	    <%= f.collection_select :team, project_teams, :id, :name, {}, class: 'form-control' %>
	  </div>
	</div>	
	  <%= f.submit t('projects.add_team'), class: 'btn btn-info' %>
	<% end %>
  <% else %>
	<p><%= t('projects.no_available_team') %></p>
  <% end %>
</div>