<% if projects.empty? %>
  <p> <%= t('projects.no_project_to_show') %></p>
<% else %>
  <br><br>
  <table class="table text-center">
    <thead class="thead-light">
      <tr>
        <th><%= t(('shared.sq_num_field'), model: t('shared.project')) %></th>
        <th><%= t('shared.name_field') %></th>
        <th><%= t('shared.type_field') %></th>
        <th><%= t('shared.created_field') %></th>
        <th><%= t('shared.actions_field') %></th>
      </tr>
    </thead>
    <tbody>
      <% projects.each do |project|%>
        <tr>
          <td><%= project.sequence_num %></td>
          <td><%=project.name%></td>
          <td><%= project.project_category%></td>
          <td><%= time_ago_in_words(project.created_at) %> <%= t('shared.ago') %></td>
          <td>
            <%= link_to '<i class="fas fa-eye"></i>'.html_safe,project_path(project), class: 'btn btn-outline-info btn-sm card-button' %>
            <% if can? [:destroy, :update], project %>
              <%= link_to '<i class="fas fa-pencil-alt"></i>'.html_safe, edit_project_path(project), {class: 'btn btn-outline-info btn-sm card-button mx-2',remote: true, 'data-toggle' =>  "modal", 'data-target' => '#create_project_modal'} %>
              <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, project_path(project), method: :delete, class: 'btn btn-sm btn-outline-danger card-button' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%== pagy_bootstrap_nav(pagy) %>
<% end %>