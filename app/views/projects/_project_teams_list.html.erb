<br>
<div class="row">
  <div class="col-md-4 offset-md-1">
    <h3><%= t('projects.all_teams') %></h3>
  </div>
<% if can? :new_team_for_project, Project %>
  <div class="col-md-2">
    <%= link_to t('projects.add_team'), new_team_for_project_project_path(@project), {class: 'btn my-primary-btn', remote: true, data: { toggle: "modal", target: '#add_team_to_project_modal'}}%>
  </div>
<% end %>
</div>
<br><br>
<div class="row">
  <div class="col-md-6 offset-md-1">
    <ul class="list-group">
      <% @project.teams.each do |team| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= team.name%>
        <% if can? :remove_user_from_project, @project %>
          <%= link_to remove_team_from_project_project_path(@project, team: team), method: :delete, class: 'btn btn-sm btn-outline-danger card-button float-right' do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<div id = "add_team_to_project_modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
  </div>
  </div>
</div>