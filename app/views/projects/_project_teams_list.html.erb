<br>
<div class="row">
  <div class="col-md-4">
    <h3><%= t('projects.all_teams') %></h3>
  </div>
<% if can? :new_team_for_project, Project %>
  <div class="col-md-8 d-flex justify-content-end">
    <%= link_to t('projects.add_team'), new_team_for_project_project_path(@project), {class: 'btn my-primary-btn', remote: true, data: { toggle: "modal", target: '#add_team_to_project_modal'}}%>
  </div>
<% end %>
</div>
<br>
<div class="row">
  <div class="col-md-12">
    <% if @project.teams.empty? %>
      <p> <%= t('teams.no_team_to_show') %></p>
    <% else %>
      <table class="table text-center">
        <thead class="thead-light">
          <tr>
            <th><%= t(('shared.sq_num_field'), model: t('shared.team')) %></th>
            <th><%= t('shared.name_field') %></th>
            <th><%= t('shared.users_field') %></th>
            <th><%= t('shared.created_field') %></th>
            <th><%= t('shared.actions_field') %></th>
          </tr>
        </thead>
        <tbody>
          <% @project.teams.each do |team|%>
            <tr>
              <td><%= team.sequence_num %></td>
              <td><%=team.name%></td>
              <td><%= team.users.count%></td>
              <td><%= time_ago_in_words(team.created_at) %> <%= t('shared.ago') %></td>
              <td>                
                <%= link_to team_path(team), class: 'btn btn-outline-info btn-sm card-button' do %>
                  <i class="fas fa-eye"></i>
                <% end %>
                <% if can? :remove_team_from_project, @project %>
                  <%= link_to remove_team_from_project_project_path(@project, team: team), method: :delete, class: 'btn btn-sm btn-outline-danger card-button' do %>
                    <i class="fas fa-trash-alt"></i>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
<div id = "add_team_to_project_modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
  </div>
  </div>
</div>