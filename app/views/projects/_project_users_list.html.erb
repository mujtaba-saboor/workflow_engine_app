<br>
<div class="row">
  <div class="col-md-5 offset-md-1">
    <h3> <%= t('project.all_users') %></h3>
  </div>
<% if can? :new_user_for_project, @project %>
  <div class="col-md-2">
    <%= link_to t('project.add_user') ,new_user_for_project_project_path(@project), {class: 'btn btn-info',remote: true, data: { toggle: "modal", target: '#my_id_add_user_to_project_modal'}} %>
  </div>
<% end %>
</div>
<br><br>
<div class="row">
  <div class="col-md-6 offset-md-1">
    <ul class="list-group">
      <% @project.users.each do |user| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
    	  <%= user.name %>
        <% if can? :remove_user_from_project, @project %>
    	     <%= link_to t('projects.remove_user'), remove_user_from_project_project_path(@project, user: user),method: :delete,class: 'badge badge-danger' %>
        <% end %>
    	</li>
      <% end %>
    </ul>
  </div>
</div>
<div id = "my_id_add_user_to_project_modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
	</div>
  </div>
</div>