<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">Add Team</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
 <% unless isTeamAvailable?(@project) %>
	<%= form_with model: @project, url: create_team_project_path do |f| %>
	 <div class="form-row">
	    <div class="form-group col-md-4">   
	      <%= f.label 'Available Teams'%>      
		  <%= f.collection_select :team, project_teams(@project), :id, :name, {},{:class => 'form-control'} %>
		</div>
	 </div>
		<% if params[:action] == 'edit' %>
		 	<%= f.submit 'Update Team', class: 'btn btn-primary' %>	
		<%else%>	
		 	<%= f.submit 'Add Team', class: 'btn btn-primary' %>	
		<% end %>
	<%end%>
<%else%>
	<p>No Team available to add.</p>
<%end%>

</div>