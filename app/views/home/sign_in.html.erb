<h1><%= t('home.sign_in.title') %></h1>
<%= form_with url: user_companies_path do |form| %>
  <div class="form-group">
    <%= form.email_field :email, placeholder: t('home.sign_in.email_address_placeholder'), class: 'form-control' %>
  </div>
  <%= form.submit t('home.sign_in.search'), class: 'btn btn-primary' %>
<% end %>
<div id="user_companies"></div>