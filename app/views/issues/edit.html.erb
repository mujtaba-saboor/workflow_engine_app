<div class="container">
  <div class="card box-shadow p-5-rem mb-4">
    <div class="card-body">
      <div class="card-title">
        <div class="row d-xl-flex justify-content-between align-items-end">
          <h3 class="text-dark-heading"><%= t 'issues.edit_form.title', issue_name: @issue.title %></h3>
          <h6><%= "#{Project.model_name.human}: #{@project.name}"%></h6>
        </div>
      </div>

      <%= form_for [@project, @issue], class: 'form-primary', url: { action: "update" } do |f| %>
        <%= render partial: 'issue_form_internal', locals: { issue: @issue, valid_assignees: @valid_assignees,form: f } %>
        <%= submit_tag t('shared.update'), class: 'btn btn-info form-control' %>
      <% end %>
      </div>
  </div>
</div>
