<div class="search-box container-fluid">
  <%= form_with url: filter_issues_path, method: :get do |form| %>
    <div class="row">
      <div class="col-md-10">
        <div class='form-group my-1 float-left'>
          <%= form.label :status %>
          <%= form.select(:status, options_for_select([[t('issues.filter.categories.all'), '']] + create_select_options_for_enum(:status, Issue.statuses.keys)), {}, { class: 'mx-2' }) %>
        </div>
        <div class='form-group my-1 float-left'>
          <%= form.label :priority %>
          <%= form.select(:priority, options_for_select([[t('issues.filter.categories.all'), '']] + create_select_options_for_enum(:priority, Issue.priorities.keys)), {}, { class: 'mx-2' }) %>
        </div>
        <div class='form-group my-1 float-left'>
          <%= form.label :issue_type %>
          <%= form.select(:issue_type, options_for_select([[t('issues.filter.categories.all'), '']] + create_select_options_for_enum(:issue_type, Issue.issue_types.keys)), {}, {class: 'mx-2'}) %>
        </div>
        <%= form.submit t('shared.filter'), class: 'btn btn-info' %>
      </div>
      <div class="col-md-2">
        <div class='form-group my-1 float-right'>
          <%= form.text_field :issue_title, placeholder: t('issues.filter.form.issue_title'), class: 'mx-2' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div id="issues_list" class="container-fluid my-4">
  <%= render 'issues_table', issues: issues, pagy: @pagy %>
</div>
