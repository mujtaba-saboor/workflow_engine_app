<%= form_for @issue do |form| %>

<% if @issue.errors.any? %>
  <div class='error-explanation'>
    <h2>
      <%= t('errors.messages.not_saved', count: @issue.errors.count, resource: @issue.class.model_name.human.downcase)
       %>
    </h2>
    <ul>
      <% @issue.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class='form-group'>
  <%= form.label :title %>
  <%= form.text_field :title, class: 'form-control' %>
</div>
<div class='form-group'>
  <%= form.label :description %>
  <%= form.text_area :description, class: 'form-control' %>
</div>
<div class='form-group'>
  <%= form.label :assignee %>
  <%= form.select(:assignee_id, options_for_select([[1], [2], [3]]), { include_blank: true }, {class: 'form-control'}) %>
</div>
<div class='form-group'>
  <%= form.label :status %>
  <%= form.select(:status, options_for_select([['open'], ['in_progress'], ['resolved'], ['closed']]), {}, {class: 'form-control'}) %>
</div>
<div class='form-group'>
  <%= form.label :priority %>
  <%= form.select(:priority, options_for_select([['low'], ['high']]), {}, {class: 'form-control'}) %>
</div>
<div class='form-group'>
  <%= form.label :issue_type %>
  <%= form.select(:issue_type, options_for_select([['bug'], ['issue']]) {}, {class: 'form-control'}) %>
</div>
<div class='form-group'>
  <%= form.file_field :documents, multiple: true %>
</div>
<div>
  <%= form.submit 'Create', class: 'btn btn-primary' %>
</div>
<% end %>
