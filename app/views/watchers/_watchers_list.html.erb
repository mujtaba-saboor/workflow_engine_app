<div class="modal fade" id="watchers_list_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="watchers_list_modal_title"><%= t('watchers.watchers') %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% if user_watchers.empty? %>
          <p><%= t('watchers.no_project_member') %></p>
        <% else %>
          <% user_watchers.each do |user_watcher| %>
            <div class="card my-2">
              <div class="card-body">
                <h5 class="card-title"><%= link_to(user_watcher.user_name, user_path(user_watcher.user_id)) %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= user_watcher.user_email %></h6>
                <% if user_watcher.watcher_id %>
                  <div class="badge badge-warning"><%= t('watchers.watching') %></div>
                <% else %>
                  <div class="badge badge-danger"><%= t('watchers.not_watching') %></div>
                <% end %>
             </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
      </div>
    </div>
  </div>
</div>
