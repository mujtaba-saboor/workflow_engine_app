<% @user_watchers.each do |user_watcher| %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= link_to(user_watcher.name, user_path(user_watcher.id)) %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= user_watcher.email %></h6>
      <div id="watch_issue_<%= current_user.id %>">
        <%= render 'watch_links', issue: @issue, watcher: user_watcher.watcher_id %>
      </div>
   </div>
  </div>
<% end %>
<%== pagy_bootstrap_nav(@pagy) %>