<%= render 'layouts/errors', resource: comment %>
<%= form_with model: comment, url: { action: "update" } do |form| %>
<div class="form-group">
  <%= form.label t('comments.comment_edit_form_label'), for: :body %>
  <%= form.text_area :body, class: 'form-control' %>
</div>
<%= form.submit t('shared.update_model', model: Comment.model_name.human), class: 'btn btn-primary' %>
<% end %>