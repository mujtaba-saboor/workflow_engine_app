<% if user_signed_in? %>
<%= render 'layouts/errors', resource: comment %>
<%= form_with model: [resource, comment] do |form| %>
<div class="form-group">
	<%= form.label 'Add a comment', for: :body %>
	<%= form.text_area :body, placeholder: 'Enter your comment here ...', class: 'form-control' %>
</div>
<%= form.submit 'Create Comment', class: 'btn btn-primary' %>
<% end %>
<% else %>
<%= link_to 'Sign in', new_user_session_path %> to add a comment.
<% end %>