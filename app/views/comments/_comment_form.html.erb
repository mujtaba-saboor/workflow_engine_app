<%= render 'layouts/errors', resource: comment %>
<%= form_with model: [resource, comment] do |form| %>
<div class="form-group">
	<%= form.label 'Add a comment', for: :body %>
	<%= form.text_area :body, placeholder: 'Enter your comment here ...', class: 'form-control', style: 'border-left: 4px solid blue;' %>
</div>
<%= form.submit 'Create Comment', class: 'btn btn-primary' %>
<% end %>
