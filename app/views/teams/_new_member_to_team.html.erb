<div class="modal-header">
  <h5 class="modal-title"><%= t('teams.add_user') %></h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
  <% team_users = @team.available_users %>
  <% if team_users.present? %>
    <%= form_with model: @team, url: add_user_to_team_team_path do |f| %>
      <div class="worflow-form">
        <div class="p-t-15 m-r-10">
          <div class="col-12">
            <div class="row no-gutters d-flex justify-content-between">
              <div class="d-flex align-items-end col-sm-4">
                <%= f.label t('teams.available_users') %>
              </div>
              <div class="col-sm-8 d-flex justify-content-end">
                <%= f.collection_select :user, team_users, :id, :name, {}, class: 'form-input-area' %>
              </div>
            </div>
          </div>
        </div>
        <div class="p-t-15 m-r-10">
          <div class="col-sm-12 d-flex justify-content-center">
            <%= f.submit t('teams.add_user'), class: 'my-primary-btn form-submit-btn' %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p><%= t('teams.no_available_user') %></p>
  <% end %>
</div>