<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">Add Member</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
<% unless isMemberAvailable?(@team) %>
  <%= form_with model: @team, url: create_member_team_path do |f| %>
   <div class="form-row">
      <div class="form-group col-md-4">   
        <%= f.label 'Available Users'%>      
      <%= f.collection_select :user, team_users(@team), :id, :name, {},{:class => 'form-control'} %>
    </div>
   </div>
    <% if params[:action] == 'edit' %>
      <%= f.submit 'Update Team', class: 'btn btn-primary' %> 
    <%else%>  
      <%= f.submit 'Add User', class: 'btn btn-primary' %>  
    <% end %>
  <%end%>
<%else%>
  <p>No User available to add.</p>
<%end%>

</div>