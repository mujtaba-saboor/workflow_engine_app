<div class ='container'>
  <h1 align= 'center'><%= t('teams.all_teams') %></h1>
	<% @teams.each do |team| %>
	  <div class="card">
	    <h5 class="card-header"><%= team.name %></h5>
	    <div class="card-body">  
	      <%= link_to t('shared.delete'), team_path(team), method: :delete , class: 'btn btn-danger' %> | 
	      <%= link_to t('shared.edit'), edit_team_path(team), {class: 'btn btn-success', remote: true, data: { toggle: "modal", target: '#my_id_modal_window'}} %> |
	      <%= link_to t('shared.show'), team_path(team), class: 'btn btn-success' %>
	    </div>
	  </div>
	<br>
	<% end %>
	<%= link_to t('teams.add_team'), new_team_path,{class: 'btn btn-success', remote: true, data: { toggle: "modal", target: '#my_id_modal_window'}} %>
</div>
<div id = "my_id_model_window" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
	</div>
  </div>
</div>
