<h2><%= t('users.resend_lock_instructions') %></h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: t('users.email'), required: true %>
  </div>

  <div class="actions">
    <%= f.submit t('users.resend_lock_instructions'), class: "btn btn-info" %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
