<h1 class='h4 text-gray-900 mb-4'>t('users.edit') <%= resource_name.to_s.humanize %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>

  <div class='form-group'>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: t('users.email'), class: 'form-control', required: true  %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class='form-group'>
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: t('users.new_password'), class: 'form-control', required: true  %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> t('users.character_minimum')</em>
    <% end %>
  </div>

  <div class='form-group'>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: t('users.new_password'), class: 'form-control', required: true %>
  </div>

  <div class='form-group'>
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: t('users.current_password'), class: 'form-control', required: true %>
  </div>

  <div class='actions'>
    <%= f.submit t('users.update'), class: 'btn btn-primary' %>
  </div>
<% end %>

<h1 class='h4 text-gray-900 mb-4'>t('users.cancel_account')</h1>

<p>Unhappy? <%= button_to t('users.cancel_account'), registration_path(resource_name), data: { confirm: t('users.are_you_sure') }, method: :delete %></p>

<%= link_to t('users.back'), :back %>
