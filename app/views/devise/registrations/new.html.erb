<h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: "form-control",placeholder: "Enter Name Here", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "form-control",placeholder: "name@example.com", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: t(:new_password), class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "Password", class: "form-control" , required: true %>
  </div>

  <div class="form-group" >
    <%= f.fields_for :company, Company.new do |o| %>
      <%= o.label :company_name %><br />

      <span onchange ="make_subdomain()"><%= o.text_field :name, id: "company_name_id", class: "form-control" %></span><%= o.hidden_field :subdomain, id: "subdomain_id" , required: true %>

    <% end %>
  </div>

<br />
<p id="domain_place"></p>

  <div>
    <%= f.submit t('users.sign_up'), class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
