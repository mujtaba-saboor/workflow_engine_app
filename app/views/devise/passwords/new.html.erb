<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render t(:shared_path_of_error_messages), resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: t :email %>
  </div>

  <div class="actions">
    <%= f.submit t :send_reset_password_instuctions %>
  </div>
<% end %>

<%= render t :shared_path_of_links %>
