<h2><%= t('users.change_my_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, t('users.new_password') %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t('users.character_minimum') %>)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: 'New Password', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, t('users.confirm_new_password')  %><br />
    <%= f.password_field :password_confirmation, autocomplete: 'New Password', required: true %>
  </div>

  <div class="actions">
    <%= f.submit t('users.change_my_password'), class: "btn btn-info" %>
  </div>
<% end %>
